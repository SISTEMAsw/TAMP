<div class="input-group" id={{id}} style="margin:7px">
    <span class="form-control">
    	{{{name}}}
    	<textarea rows="1" cols="20"  style="float:right; resize:none; margin-left:6px">{{extent.[1]}}</textarea>
    	<textarea rows="1" cols="20" style="float:right; resize:none;">{{extent.[0]}}</textarea>
    </span>
    <span class="input-group-btn">
    	<button class="btn btn-danger delete-filter" type="button" style="padding-top:0; padding-bottom:0; height:100%; border:0">
    		<i class="fa fa-minus-circle"></i>
    	</button>
    </span>
</div>

